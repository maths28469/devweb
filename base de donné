CREATE TABLE Utilisateur (
    id_utilisateur INT PRIMARY KEY,
    nom VARCHAR(100),
    email VARCHAR(100),
    mot_de_passe VARCHAR(100)
);

CREATE TABLE Categorie (
    id_categorie INT PRIMARY KEY,
    nom VARCHAR(100)
);

CREATE TABLE Preparation (
    id_preparation INT PRIMARY KEY,
    temps_de_cuisson VARCHAR(100),
    ustensile VARCHAR(100),
    instruction VARCHAR(1000)
);

CREATE TABLE Recette (
    id_recette INT PRIMARY KEY,
    nom_recette VARCHAR(100),
    ingredients VARCHAR(1000),
    description VARCHAR(1000),
    id_categorie INT,
    id_preparation INT,
    id_utilisateur INT,
    FOREIGN KEY (id_categorie) REFERENCES Categorie(id_categorie),
    FOREIGN KEY (id_preparation) REFERENCES Preparation(id_preparation),
    FOREIGN KEY (id_utilisateur) REFERENCES Utilisateur(id_utilisateur)
);
ALTER TABLE utilisateur 
ADD COLUMN photo varchar(3000);
ALTER TABLE Recette 
ADD COLUMN urlimage varchar(3000);